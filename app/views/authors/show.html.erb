<% cache @author do %>
  <div class="mx-auto mt-12 grid gap-5 w-1/2">
    <div class="flex flex-col overflow-hidden rounded-lg shadow-lg">
      <div class="flex-shrink-0">
        <img class="h-48 w-full object-contain" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSt4P_TyDHZZVKEOWBsRE6YPUmtOpXWY0SvqDy88PdCwJhWbVxNQuJFCoNjd8TFQ7E8vSo&usqp=CAU" alt="">
      </div>
      <div class="flex flex-1 flex-col justify-between bg-white p-6">
        <div class="flex-1">
          <p class="text-sm font-medium text-indigo-600">
            <a href="#" class="hover:underline">Fantasy</a>
          </p>
          <a href="#" class="mt-2 block">
            <p class="text-xl font-semibold text-gray-900">
              <%= @author.full_name %>
            </p>
            <p class="mt-3 text-base text-gray-500">
              Tolkien was a British writer, poet, philologist, and university professor who is best
              known as the author of the classic high fantasy works The Hobbit, The Lord of the
              Rings,
              and The Silmarillion.
            </p>
          </a>
        </div>
        <dl class="sm:divide-y sm:divide-gray-200 mt-4">
          <div class="py-4 sm:grid sm:grid-cols-3 sm:gap-4 sm:py-5">
            <dt class="text-sm font-medium text-gray-500">Books <%= @author.books.count %>
              :
            </dt>
            <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0">
              <ul>
                <% @author.books.each do |book| %>
                  <%= link_to book do %>
                    <li class="mb-2">
                      <%= book.title %>
                    </li>
                  <% end %>
                <% end %>
              </ul>
            </dd>
          </div>
        </dl>
      </div>
    </div>
  </div>
<% end %>
