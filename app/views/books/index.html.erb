<div>
  <div class="mt-6 flow-root">
    <ul role="list" class="-my-5 divide-y divide-gray-200">
      <% @books.each do |book| %>
        <li class="py-5">
          <div class="relative focus-within:ring-2 focus-within:ring-indigo-500">
            <h3 class="text-sm font-semibold text-gray-800">
              <%= link_to book, class: 'hover:underline focus:outline-none' do %>
                <!-- Extend touch target to entire panel -->
                <span class="absolute inset-0" aria-hidden="true"></span>
                <%= book.title %>
              <% end %>
            </h3>
            <p class="mt-1 text-sm text-gray-600 line-clamp-2">Cum qui rem deleniti. Suscipit in
              dolor veritatis sequi aut. Vero ut earum quis deleniti. Ut a sunt eum cum ut
              repudiandae possimus. Nihil ex tempora neque cum consectetur dolores.</p>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>

